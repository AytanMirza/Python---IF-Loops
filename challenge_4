# Take three numbers as input and print which is smallest, which is in between and whichis largest. Assume all of them are different.

a = int(input("Enter a:"))
b = int(input("Enter b:"))
c = int(input("Enter c:"))
if (a < b and a < c):
    print(a, "is the smallest")
    if b > c:
        print(c, 'is the between')
        print(b,'is the bigger')
    else:
        print(b, 'is the between')
        print(c, 'is the bigger')
elif (b < a and b < c):
    print(b, "is the smallest")
    if a > c:
        print(c,'is the between')
        print(a, 'is the bigger')
    else:
        print(c, 'is the between')
        print(a,'is the bigger')

elif (c < a and c < b):
    print(c, "is the smallest")
    if b > a:
        print(a,'is the between')
        print(b, 'is the bigger')
    else:
        print(b,'is the between')
        print(a, 'is the bigger')
